# bash completion for ntpdate

have ntpdate &&
_ntpdate()
{
    local cur prev

    COMPREPLY=()
    _get_comp_words_by_ref cur prev

    case $prev in
        -k)
            _filedir
            return 0
            ;;
        -U)
            COMPREPLY=( $( compgen -u "$cur"  ) )
            return 0
            ;;
    esac

    if [[ "$cur" == -* ]]; then
        COMPREPLY=( $( compgen -W '-4 -6 -b -B -d -Q -q -s -u -v -a\
            -e -k -p -o -r -t' -- "$cur" ) )
    else
        _known_hosts_real "$cur"
    fi
} &&
complete -F _ntpdate ntpdate

